<h1>Listing cooks</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cooks.each do |cook| %>
      <tr>
        <td><%= cook.name %></td>
        <td><%= link_to 'Show', cook %></td>
        <td><%= link_to 'Edit', edit_cook_path(cook) %></td>
        <td><%= link_to 'Destroy', cook, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Cook', new_cook_path %> | <%= link_to 'Back to Cookbooks', cookbooks_path %>
